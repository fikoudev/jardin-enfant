{% extends '@AppBundle/Resources/views/default/index.html.twig' %}

{% block body %}
    {% block header %}{{ parent() }}{% endblock %}

    <div class="section__title text-center">
        <h1 class="title__line">Menu List</h1>
    </div>
    </br> </br>
<div>
    <input id="myInput" type="search" placeholder="Search ..."  style="background-image: url({{ asset('images/icon/seachicon.png')}}) ;background-repeat: no-repeat ; height: 40px ; background-position: right center"  />
</div>
    </br>
    </br>

    <div class="wishlist-table table-responsive">
    <table >
        <thead>
            <tr>
                <th><h4>Entree</h4></th>
                <th><h4>Plat</h4></th>
                <th><h4>Dessert</h4></th>
                <th><h4>Actions</h4></th>
            </tr>
        </thead>

        <tbody id="myTable">
        {% for menu in menus %}
            <tr>
                <td>{{ menu.entree }}</td>
                <td><a href="{{ path('menu_show', { 'idMenu': menu.idMenu }) }}"></a></td>
                <td>{{ menu.plat }}</td>
                <td>{{ menu.dessert }}</td>

                <td>
                    <ul>
                        <li>
                            <h4> <a href="{{ path('menu_show', { 'idMenu': menu.idMenu  }) }}">show</a></h4>
                        </li>
                        <li>
                            <h4><a href="{{ path('menu_edit', { 'idMenu': menu.idMenu  }) }}">edit</a><h4>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        
    </table>
    </div>
<div id="mc_embed_signup_scroll" class="htc__news__inner">
    <div class="choose__inner">
    <ul>
        <li>
            <h4><a href="{{ path('menu_new') }}">Add Menu</a></h4>
        </li>
    </ul>
    </div>
</div>
    {% block footer %}{{ parent() }}{% endblock %}

{% endblock %}

